@model BlogTracker.Models.EmpInfo
@{
    ViewData["Title"] = "Login";
}

<h1>Employee Login</h1>
<form asp-action="EmployeeLogin" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="EmailId">Email</label>
        <input asp-for="EmailId" class="form-control" />
        <span asp-validation-for="EmailId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PassCode">Passcode</label>
        <input asp-for="PassCode" class="form-control" type="password" />
        <span asp-validation-for="PassCode" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Login</button>
</form>

